<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="poc.themeswitcher.controller.Main">

    <Page id="mainPage" title="UI5 Virtual Theme Switching POC">
        <content>
            <VBox class="sapUiMediumMargin" alignItems="Center">
                <Button id="btnAlarm"
                        text="Riasztás szimulálása"
                        icon="sap-icon://alert"
                        type="Reject"
                        press="onSimulateAlarm"
                        class="sapUiLargeMarginTop" />
            </VBox>
        </content>
    </Page>

</mvc:View>
